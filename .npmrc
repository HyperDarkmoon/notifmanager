# NPM Configuration to prevent hanging and update prompts
update-notifier=false
fund=false
audit=false
progress=false
loglevel=error

# Disable automatic package updates
save-exact=true

# Timeout settings to prevent hanging
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Registry settings (optional - can help with connectivity issues)
registry=https://registry.npmjs.org/

# Cache settings
cache-min=86400
